      <!-- Input New Burgers Form -->
      <form action="diner/create" method="POST" class="form-horizontal"> 
 

  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Name:</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="name" placeholder="Enter email">
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-4"> 
      <input type="email" class="form-control" name="email" placeholder="Enter password">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="price">Price Level:</label>
    <div class="col-sm-2">
       <select class="form-control col-sm-2" name="price">
        <option value=1>Cheap</option>
        <option value=2>Moderate</option>
        <option value=3>Expensive</option>
        <option value=4>I got a Raise</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="type">Food Type:</label>
    <div class="col-sm-2">
       <select class="form-control col-sm-2" name="type">
        <option>BBQ</option>
        <option>Chinese</option>
        <option>Italian</option>
        <option>Seafood</option>
        <option>Steak</option>
      </select>
    </div>
  </div>
  

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-warning">Submit</button>
       
    </div>
  </div>
</form>